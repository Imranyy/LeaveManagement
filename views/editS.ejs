<% include ./partial/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Edit Profile<%= student.name%></h1>
    <div style="width: 30%;margin:25px auto;">
      <form action="/student/<%=student._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= student.name%>"
            name="student[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= student.username%>"
            name="student[username]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= student.department%>"
            name="student[department]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= student.hostel%>"
            name="student[hostel]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= student.image%>"
            name="student[image]"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Submit</button>
        </div>
      </form>
      <a href="/student/profile">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
