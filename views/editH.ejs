<% include ./partial/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Edit Profile<%= hod.name%></h1>
    <div style="width: 30%;margin:25px auto;">
      <form action="/hod/<%=hod._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= hod.name%>"
            name="hod[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= hod.username%>"
            name="hod[username]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= hod.department%>"
            name="hod[department]"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= hod.image%>"
            name="hod[image]"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Submit</button>
        </div>
      </form>
      <a href="/hod/profile">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
