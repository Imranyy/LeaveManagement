<% include ./partial/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Edit Profile<%= warden.name%></h1>
    <div style="width: 30%;margin:25px auto;">
      <form action="/warden/<%=warden._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= warden.name%>"
            name="warden[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= warden.username%>"
            name="warden[username]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= warden.hostel%>"
            name="warden[hostel]"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= warden.image%>"
            name="warden[image]"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Submit</button>
        </div>
      </form>
      <a href="/warden/profile">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
